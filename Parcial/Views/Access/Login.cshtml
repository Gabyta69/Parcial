@{
    ViewBag.Title = "Iniciar Sesión";
}
<br />
<br />

<div class="jumbotron">
    <h1 class="text-center">INICIAR SESIÓN</h1>
    <p class="lead text-center">Bienvenido al registro academico</p>
</div>

@using (Html.BeginForm("Login", "Access", FormMethod.Post))
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="text-center">
                <label>Usuario</label>
                <br />
                <input type="text" id="user" name="user" width="200">
                <br />
                <label>Contraseña</label>
                <br />
                <input type="password" id="password" name="password" width="200">
                <br />
                <br />
                <div class="text-center">
                    <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>

    <br />
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
}




